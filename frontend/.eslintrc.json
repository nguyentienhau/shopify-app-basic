{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"plugins": ["react", "spellcheck"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "windows"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"spellcheck/spell-checker": [
			"warn",
			{
				"comments": true,
				"strings": true,
				"identifiers": true,
				"lang": "en_US",
				"skipWords": [
					"bool",
					"utils",
					"localhost",
					"frontend",
					"webpack",
					"jsx",
					"tsx"
				],
				"skipIfMatch": ["http://[^s]*"],
				"skipWordIfMatch": ["^foobar.*$"],
				"minLength": 3
			}
		]
	}
}
